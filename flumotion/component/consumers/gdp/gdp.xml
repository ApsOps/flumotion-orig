<registry>

  <components>

    <component type="gdp-consumer" base="flumotion/component/consumers/gdp"
               _description="Consumes a feed as a GStreamer TCP server.">
      <source location="flumotion.component.consumers.gdp.gdp" />
      <eater name="default" />
      <entries>
        <entry type="component" location="gdp.py"
               function="GDPConsumer" />
      </entries>
      <properties>
        <property name="mode" type="string"
                  _description="Connection mode between 'push' and 'pull' mode. (default: push)" />
        <property name="host" type="string"
                  _description="The host name or IP address of the pull server, only required in push mode." />
        <property name="port" type="int" required="true"
                  _description="The port of the peer." />
        <property name="username" type="string"
                  _description="User name for the authentication (default: user)" />
        <property name="password" type="string"
                  _description="Password used for the authentication (default: test)" />
        <property name="version" type="string"
                  _description="Version of the protocol used (default: 0.1)" />
        <property name="max-reconnection-delay" type="int"
                  _description="Maximum number of seconds between connection attempt, has only effect in push mode." />
      </properties>
    </component>

  </components>

  <bundles>

    <bundle name="gdp-consumer-base">
        <dependencies>
            <dependency name="component-base" />
            <dependency name="fgdp-base" />
        </dependencies>

        <directories>
            <directory name="flumotion/component/consumers/gdp">
                <filename location="__init__.py" />
            </directory>
        </directories>
    </bundle>

    <bundle name="gdp-consumer-component">
        <dependencies>
            <dependency name="component" />
            <dependency name="gdp-consumer-base" />
        </dependencies>

        <directories>
            <directory name="flumotion/component/consumers/gdp">
                <filename location="gdp.py" />
            </directory>
        </directories>
    </bundle>

  </bundles>

</registry>
