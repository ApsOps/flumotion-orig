<registry>

  <components>
    <component type="faac-muxer"
               base="flumotion/component/muxers/aac"
               _description="Repeater muxer to allow AAC with ADTS headers.">
      <source location="flumotion.component.muxers.faac.faac" />

      <eater name="default" multiple="yes" />
      <feeder name="default" />

      <entries>
        <entry type="component" location="aac.py"
               function="FAACMuxer" />
      </entries>

      <wizard _description="FAAC (ADTS)" type="muxer"
              feeder="default" eater="default">
        <accept-format media-type="audio:aac"/>
        <provide-format media-type="aac"/>
      </wizard>

    </component>
  </components>

  <bundles>

    <bundle name="faacmuxer-component">
        <dependencies>
            <dependency name="component" />
        </dependencies>

        <directories>
            <directory name="flumotion/component/muxers/faac">
                <filename location="__init__.py" />
                <filename location="faac.py" />
            </directory>
        </directories>
    </bundle>

  </bundles>

</registry>
